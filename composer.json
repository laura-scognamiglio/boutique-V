{
    "require": {
        "monolog/monolog": "2.0.*",
        "simple-crud/simple-crud": "^7.5",
        "stripe/stripe-php": "^7.123",
        "voku/anti-xss": "^4.1",
        "php-console/php-console": "^3.1",
        "slim/slim": "4.*",
        "slim/psr7": "^1.5",
        "php-di/php-di": "^6.3"
    },

    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
